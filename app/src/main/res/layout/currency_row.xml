<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currency_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rec_cur_ico"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_weight="0.5"
        android:contentDescription="currency logo"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/rec_cur_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Btc - Eth"
        android:layout_gravity="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/rec_cur_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="0.00234" />

    <TextView
        android:id="@+id/rec_cur_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:minWidth="5sp"
        android:text="+13%" />

    <ImageView
        android:id="@+id/rec_cur_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        app:srcCompat="@drawable/cross" />

</LinearLayout>